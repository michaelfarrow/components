<h1>Category: {{category.title}}</h1>
<ul class="breadcrumbs">
  <li><a href="/">Home</a></li>
  <li>{{category.title}}</li>
</ul>

<div class="components-table">
  <table>
    <thead>
      <tr>
        <td>Component</td>
        <td>Quantity</td>
        {{#each category.headers}}
        <td>{{title}}</td>
        {{/each}}
        <td>Datasheet</td>
      </tr>
    </thead>
    {{#each category.groups}}
    {{#if components.length}}
    <tbody>
      {{#if name}}<tr>
        <td class="components__group" colspan="{{../category.colCount}}">{{name}}</td>
      </tr>{{/if}}
      {{#each components}}
      <tr>
        <td>{{#if id}}<a href="/c/{{../../category.slug}}/{{slug}}/">{{id}}</a>{{/if}}</td>
        <td>{{quantity}}</td>
        {{#each fields}}
        <td>{{#if this.value}}{{this.value}}{{/if}}</td>
        {{!-- <td>{{#unless ../id}}{{#unless @index}}<a
                href="/c/{{../../category.slug}}/{{../slug}}/">{{/unless}}{{/unless}}{{#if this.value}}{{this.value}}{{/if}}{{#unless ../id}}{{#unless @index}}</a>{{/unless}}{{/unless}}
            </td> --}}
        {{/each}}
        <td>{{#if datasheet}}<a class="datasheet__tick" target="_blank" href="{{datasheet}}"
            title="Datasheet">âœ“</a>{{/if}}</td>
      </tr>
      {{/each}}
    </tbody>
    {{/if}}
    {{/each}}
  </table>
</div>

